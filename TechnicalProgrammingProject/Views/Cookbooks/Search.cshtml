@model List<TechnicalProgrammingProject.Models.Recipe>

@{
    ViewBag.Title = "Cookbook Search";
}

<h2> Your Cookbook Recipes</h2>

<form method="get">
    <input type="search" name="searchTerm" />
    <input type="submit" value="Search Your Cookbook By Name, Tag, or Ingredient" />
</form>

<p>@ViewBag.Message</p>

<div class="row">
    @foreach (var userRecipe in Model)
    {
        @Html.Partial("_RecipeCard", userRecipe);
    }
</div>
