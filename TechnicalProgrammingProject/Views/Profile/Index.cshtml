@model TechnicalProgrammingProject.Models.ProfileViewModel

@Styles.Render("~/content/asset/css/profile.css")

<h2>@Html.ActionLink(Model.DisplayName, "Index", "Profile", new { id = Model.ID }, null)'s Profile</h2>
<hr />

<div class="container">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="row">
            <div class="col-md-4 avatar">
                @Html.Image(Model.ProfilePicture, new { @class = "img-responsive img-thumbnail" })
                <div class="row">
                    <div class="col-md-4 link">
                        <input type="button" class="btn btn-default" value="View Cookbook" onclick="location.href='@Url.Action("Index", "Cookbooks", new { id = Model.ID })'" />
                        <input type="button" class="btn btn-default" value="View Uploads" onclick="location.href='@Url.Action("Uploads", "Recipes", new { id = Model.ID })'" />
                    </div>
                </div>
            </div>

            <div class="col-md-8 info">
                <table class="table">
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.DisplayName)</th>
                        <th>@Html.DisplayFor(model => model.DisplayName)</th>
                    </tr>
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.FirstName)</th>
                        <th>@Html.DisplayFor(model => model.FirstName)</th>
                    </tr>
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.LastName)</th>
                        <th>@Html.DisplayFor(model => model.LastName)</th>
                    </tr>
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.Email)</th>
                        <th>@Html.DisplayFor(model => model.Email)</th>
                    </tr>
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.Biography)</th>
                        <th>@Html.DisplayFor(model => model.Biography)</th>
                    </tr>
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.DateOfBirth)</th>
                        <th>@Html.DisplayFor(model => model.DateOfBirth)</th>
                    </tr>
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.Age)</th>
                        <th>@Html.DisplayFor(model => model.Age)</th>
                    </tr>
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.Gender)</th>
                        <th>@Html.DisplayFor(model => model.Gender)</th>
                    </tr>
                </table>
            </div>
        </div>
    }
</div>

